<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5BBDC1"
    tools:context=".alfamart">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="193dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/alfamart"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_marginTop="188dp"
        android:text="Alfamart Code"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        tools:layout_editor_absoluteX="138dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="175dp"
        android:layout_height="39dp"
        android:layout_marginTop="236dp"
        android:text="7990 xxxx xxxx "
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        tools:layout_editor_absoluteX="109dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="272dp"
        android:layout_height="30dp"
        android:layout_marginTop="300dp"
        android:text="Please follow instruction bellow : "
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        tools:layout_editor_absoluteX="69dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="372dp"
        android:layout_height="65dp"
        android:layout_marginTop="344dp"
        android:text="1. Inform the Indomaret or Ceriamart cashier that your're making Payment to this online shop."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        tools:layout_editor_absoluteX="23dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="368dp"
        android:layout_height="46dp"
        android:layout_marginTop="420dp"
        android:text="2.  Show the payment code to the cashier and make payment. "
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        tools:layout_editor_absoluteX="23dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="368dp"
        android:layout_height="66dp"
        android:layout_marginTop="476dp"
        android:text="3. Keep the payment receipt as proof of payment in case any futher verivication is needed."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        tools:layout_editor_absoluteX="21dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="372dp"
        android:layout_height="45dp"
        android:layout_marginTop="548dp"
        android:text="4. Your order will be automatically verified after payment is successful."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        tools:layout_editor_absoluteX="19dp" />


</androidx.constraintlayout.widget.ConstraintLayout>